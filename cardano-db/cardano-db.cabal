cabal-version:          >= 1.10

-- http://haskell.org/cabal/users-guide/

name:                   cardano-db
version:                1.4.0
synopsis:               A base PostgreSQL component for the cardano-db-sync node.
description:            Code for the Cardano DB Sync node that is shared between the
                        cardano-db-node and other components.
homepage:               https://github.com/input-output-hk/cardano-db-sync
bug-reports:		    https://github.com/input-output-hk/cardano-db-sync/issues
license:                Apache-2.0
license-file:           LICENSE
author:                 IOHK Engineering Team
maintainer:             operations@iohk.io
copyright:              (c) 2019 IOHK
category:               Cryptocurrency
build-type:             Simple
extra-source-files:     CHANGELOG.md

library
  default-language:     Haskell2010
  hs-source-dirs:       src
  ghc-options:          -Wall
                        -Wcompat
                        -fwarn-redundant-constraints
                        -fwarn-incomplete-patterns
                        -fwarn-unused-imports
                        -Wincomplete-record-updates
                        -Wincomplete-uni-patterns

  exposed-modules:      Cardano.Db

  other-modules:        Cardano.Db.Delete
                        Cardano.Db.Error
                        Cardano.Db.Insert
                        Cardano.Db.PGConfig
                        Cardano.Db.Migration
                        Cardano.Db.Migration.Haskell
                        Cardano.Db.Migration.Version
                        Cardano.Db.Query
                        Cardano.Db.Run
                        Cardano.Db.Schema
                        Cardano.Db.Types


  build-depends:        aeson
                      , base                            >= 4.12         && < 4.13
                      , base16-bytestring
                      , bytestring
                      , containers
                      , conduit
                      , conduit-extra
                      , contra-tracer
                      , directory
                      , esqueleto
                      , extra
                      , fast-logger
                      , filepath
                      , iohk-monitoring
                      , monad-logger
                      , persistent
                      , persistent-postgresql
                      , persistent-template >= 2.7.0
                      , postgresql-simple
                      , resourcet
                      , scientific
                      , text
                      , template-haskell
                      , time
                      , transformers
                      -- This is never intended to run on non-POSIX systems.
                      , unix

executable cardano-db-tool
  default-language:     Haskell2010
  main-is:              cardano-db-tool.hs
  hs-source-dirs:       app

  ghc-options:          -Wall
                        -Wcompat
                        -fwarn-redundant-constraints
                        -fwarn-incomplete-patterns
                        -fwarn-unused-imports
                        -Wincomplete-record-updates
                        -Wincomplete-uni-patterns

  other-modules:        Cardano.Db.App
                        Cardano.Db.App.UtxoSet
                        Cardano.Db.App.Validation
                        Cardano.Db.App.Validate.BlockTxs
                        Cardano.Db.App.Validate.EpochTable
                        Cardano.Db.App.Validate.TotalSupply
                        Cardano.Db.App.Validate.Util

  build-depends:        base                            >= 4.12         && < 4.13
                      , ansi-terminal
                      , cardano-db
                      , cardano-ledger
                      , containers
                      , esqueleto
                      , optparse-applicative
                      , persistent
                      , random
                      , text
                      , time
                      , transformers

test-suite test
  default-language:     Haskell2010
  type:                 exitcode-stdio-1.0
  main-is:              test.hs
  hs-source-dirs:       test

  ghc-options:          -Wall
                        -Wcompat
                        -fwarn-redundant-constraints
                        -fwarn-incomplete-patterns
                        -fwarn-unused-imports
                        -Wincomplete-record-updates
                        -Wincomplete-uni-patterns

  other-modules:        Test.Property.Cardano.Db.Migration
                        Test.Property.Cardano.Db.Types
                        Test.Property.Upstream

  build-depends:        base                            >= 4.12         && < 4.13
                      , aeson
                      , cardano-db
                      , cardano-ledger
                      , hedgehog

test-suite test-db
  default-language:     Haskell2010
  type:                 exitcode-stdio-1.0
  main-is:              test-db.hs
  hs-source-dirs:       test

  other-modules:        Test.IO.Cardano.Db.Insert
                        Test.IO.Cardano.Db.Migration
                        Test.IO.Cardano.Db.Rollback
                        Test.IO.Cardano.Db.TotalSupply
                        Test.IO.Cardano.Db.Util

  ghc-options:          -Wall
                        -Wcompat
                        -fwarn-redundant-constraints
                        -fwarn-incomplete-patterns
                        -fwarn-unused-imports
                        -Wincomplete-record-updates
                        -Wincomplete-uni-patterns

  build-depends:        base                            >= 4.12         && < 4.13
                      , bytestring
                      , cardano-db
                      , HUnit
                      , persistent
                      , tasty
                      , tasty-hunit
                      , text
                      , time
                      , transformers
